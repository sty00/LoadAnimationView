<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imOne_float_troops"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginRight="18dp"
        android:src="@drawable/round_point"
        android:layout_toLeftOf="@+id/imTwo_float_troops"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:id="@+id/imTwo_float_troops"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/round_point"
        android:layout_centerInParent="true"
        />
    <ImageView
        android:id="@+id/imThree_float_troops"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginLeft="18dp"
        android:src="@drawable/round_point"
        android:layout_toRightOf="@+id/imTwo_float_troops"
        android:layout_centerVertical="true"
        />



</RelativeLayout>